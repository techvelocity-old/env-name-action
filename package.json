{
  "name": "env-name-action",
  "version": "0.0.0",
  "description": "Generate a valid name for your environment",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "prepare": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techvelocity/env-name-action.git"
  },
  "keywords": [
    "actions",
    "velocity",
    "env",
    "name"
  ],
  "author": "Velocity <support@velocity.tech>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.7.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@typescript-eslint/parser": "^5.21.0",
    "@vercel/ncc": "^0.33.1",
    "eslint": "^8.14.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-jest": "^26.4.6",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.6.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.6.3"
  }
}
